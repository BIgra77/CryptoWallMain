        <!--new feature-->
        
        <TextBox  IsReadOnly="True" HorizontalAlignment="Left" Height="75" Margin="480,600,0,0" Text="Best AltCoin to buy now : " TextWrapping="Wrap" VerticalAlignment="Top" Width="200" BorderThickness="1,1,1,1" Background="#007348" Foreground="White" BorderBrush="White" TextAlignment="Center" FontSize="20"/>
        <TextBox Name="altName" IsReadOnly="True" HorizontalAlignment="Left" Height="75" Margin="680,600,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" BorderThickness="1,1,1,1" Background="#007348" Foreground="White" BorderBrush="White" TextAlignment="Center" FontSize="20"/>

        
        
    </Grid>
</Window>
