        <TextBox IsReadOnly="True" HorizontalAlignment="Left" Height="75" Margin="480,425,0,0" Text="Price" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" BorderThickness="1,1,1,1" Background="#007348" Foreground="White" BorderBrush="White" FontSize="20" TextAlignment="Center" FontWeight="Bold"/>
        <TextBox Name="price3" IsReadOnly="True" HorizontalAlignment="Left" Height="75" Margin="480,500,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" BorderThickness="1,1,1,1" Background="#007348" Foreground="White" BorderBrush="White" FontSize="20" TextAlignment="Center"/>
        <TextBox IsReadOnly="True" HorizontalAlignment="Left" Height="75" Margin="680,425,0,0" Text="Comparison with Bitcoin" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" BorderThickness="1,1,1,1" Background="#007348" Foreground="White" BorderBrush="White" FontSize="20" TextAlignment="Center" FontWeight="Bold"/>
        <TextBox Name="btc3" IsReadOnly="True" HorizontalAlignment="Left" Height="75" Margin="680,500,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" BorderThickness="1,1,1,1" Background="#007348" Foreground="White" BorderBrush="White" FontSize="20" TextAlignment="Center"/>
